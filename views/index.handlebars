<div class = "container">
  <div class = "jumbotron text-center">
  <h1>Burger Time!</h1>
  </div>

  <div class = "row">
    <div class = "col-md-6">

      <h2>Burgers that haven't been eaten</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>{{id}}. {{burger_name}} <button class="eat-burger" data-id="{{this.id}}">Eat It!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class = "col-md-6">

      <h2>Burgers that have been eaten</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{id}}. {{burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div> <!-- end row -->

  <h2>Order a Burger</h2>
  
  <form class="create-form">

    <div class="form-group">
      <label for="burger_name">What sort of burger would you like?</label>
      <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit">Place Order</button>
  </form>

</div>