<div class = "container">
  <div class = "page-header text-center">
    <h1>Burger Time!</h1>
  </div>

  <div class = "col-md-6">
    <div class = "row">

      <div class = "panel panel-default order-form">

        <h2>Order a Burger</h2>
        
        <form class="create-form">

          <div class="form-group">
            <label for="burger_name">What sort of burger would you like?</label>
            <input type="text" class="form-control" id="burger_name" name="burger_name">
          </div>

          <button type="submit" class="btn btn-primary">Place Order</button>

        </form>

      </div>
    </div>

    <div class = "row">

      <h2 class="text-center">Burgers that have been ordered</h2>

        {{#each burgers}}
          {{#unless devoured}}
            <div class = "col-md-4">
              <div class = "thumbnail">
                <img src = "/assets/img/hamburger-icon.png" alt = "burger">
                <div class = "caption">
                  <p>ID: {{id}}</p>
                  <p>{{burger_name}}</p>
                  <button class="btn btn-danger eat-burger" data-id="{{this.id}}">Eat It!</button>
                </div>
              </div>
            </div>
          {{/unless}}
        {{/each}}

    </div>

  </div>

  <div class = "col-md-1"></div>

  <div class = "col-md-5">

    <h2>Burgers that have been eaten</h2>

    <table class = "table">
    <tr>
      <th>ID</th>
      <th>Description</th>
    </tr>
    {{#each burgers}}
      {{#if devoured}}
        <tr>
          <td>{{id}} </td>
          <td>{{burger_name}}</td>
        </tr>
      {{/if}}
    {{/each}}
    </table>

  </div>

</div> <!-- end container -->